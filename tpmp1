  
  class << self
    attr_accessor :main
    
    def make_all_rooms
      @main = new(:name => "Main Room")
      @main.east = new(:name => "East Room")
      @main.east.south = new(:name => "South East Room")
      @main.east.south.south = new(:name => "South South East Room")
      @main.west = new(:name => "West Room")
      @main.west.west = new(:name => "Far West Room")
      @main.west.west.north = new(:name => "North West Room")
    end
    
    SRSGame::Location::make_all_rooms
  end
